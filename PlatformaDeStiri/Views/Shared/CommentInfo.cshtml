@model PlatformaDeStiri.Models.Comment

<p>@Model.commContent</p>

<table>
    <tr>
        <td colspan="2">
            @Model.user.UserName
        </td>
    </tr>
    <tr>
        <td colspan="2">
            @Model.commDate
        </td>
    </tr>
    <tr>
        <td>
            <a class="btn btn-success" href="/Comment/Edit/@Model.commID">Modifica comentariu </a>
        </td>
        <td>
            <form method="post" action="/Comment/Delete/@Model.commID">

                @Html.HttpMethodOverride(HttpVerbs.Delete)
                <br />
                <button class="btn btn-success" type="submit">Sterge comentariu</button>

            </form>
        </td>
    </tr>
</table>

